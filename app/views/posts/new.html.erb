<h1>Nuevo Post</h1>

<div class="section">
<%= simple_form_for @post do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }, input_html: { class: 'input', placeholder: 'Ingresa el titulo del post' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :content, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, input_html: { class: 'input', placeholder: 'Ingresa el contenido del post' } %>
    </div>
  </div>
  <%= f.button :submit, 'Create new post', class: "button is-primary" %>
<% end %>
<div class="link-container">
  <%= link_to "Regresar al inicio", root_path, class: "link" %>
</div>
</div>

